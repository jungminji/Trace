mixin accordion(data)
  article.ui-accordion.menu.box
    each links, label in data
      h4.menu-label
        a.box(href)= label
      ul.menu-list
        each link in links
          li
            a(href=link.href)= link.content

mixin notification()
    div(class!=attributes.class)
        button(type="button" aria-label="close-notification").delete
        block


mixin modal(data)
    .modal(class!=attributes.class)
        .modal-background
        .modal-card
            header.modal-card-head
                h4.modal-card-title= data.title
                button(type="button" aria-label="close modal").delete
            section.modal-card-body
                p dolor sit amet, consectetur adipisicing elit. Magnam blanditiis unde officiis adipisci ex ipsum repellat nisi, accusantium enim nulla!
            footer.modal-card-foot
                a.button.is-success= data.success
                a.button.is-danger= data.cancel